<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/white">
                </solid>

                <corners android:radius="3dp" />

                <padding
                    android:bottom="15dp"
                    android:left="15dp"
                    android:right="15dp"
                    android:top="15dp" />
                <stroke
                    android:width="2dp"
                    android:color="@color/titles"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="right"
                android:src="@mipmap/ic_arrow"/>
        </item>
    </layer-list></item>
</selector>